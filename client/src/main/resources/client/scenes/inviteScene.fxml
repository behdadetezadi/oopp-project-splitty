<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="root" prefHeight="500" prefWidth="600" stylesheets="@/styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.InviteController">
    <VBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <Label fx:id="title" styleClass="title" text="New Year Party" wrapText="true">
            <font>
                <Font name="System Bold" size="38.0" />
            </font>
        </Label>
        <Label fx:id="textBeforeCode" styleClass="subtitle" text="%Give_people_the_following_invite_Code" wrapText="true" />
        <Label fx:id="inviteCode" alignment="CENTER" contentDisplay="CENTER" styleClass="subtitle" text="AC74ED">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <Label fx:id="invitePeople" styleClass="subtitle" text="%Invite_the_following_people_by_email_(one_address_per_line)" wrapText="true" />
        <TextArea id="emailsField" fx:id="emailsField" VBox.vgrow="ALWAYS" wrapText="true" promptText="%emails_go_here" />
        <HBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
            <Button id="backButton" fx:id="backButton" onAction="#handleBackButtonAction" styleClass="button" text="%back" />
            <Button id="submitButton" fx:id="submitButton" onAction="#handleSubmitButtonAction" styleClass="button" text="%Send_Invites" />
        </HBox>
    </VBox>
</AnchorPane>
