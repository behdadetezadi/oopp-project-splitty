<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" prefHeight="400" prefWidth="600" stylesheets="@/styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.EventOverviewController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <top>
        <VBox spacing="1">
            <VBox prefHeight="0.0" prefWidth="560.0">
                <children>
                    <Button fx:id="backToMain" onAction="#goBackToStartPage" text="%Go_Back" />
                </children>
            </VBox>
            <!-- Empty Region for spacing -->
            <HBox spacing="10">
                <ComboBox fx:id="languageComboBox" prefWidth="110" promptText="Language">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="English" />
                            <String fx:value="Deutsch" />
                            <String fx:value="Nederlands" />
                            <!-- Add more languages as needed -->
                        </FXCollections>
                    </items>
                    <!-- Event handler to switch language -->

                </ComboBox>
                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="sendInvitesButton" onAction="#sendInvites" text="%Send_Invites" />

            </HBox>
            <HBox alignment="CENTER" spacing="1">
                <Label fx:id="titleLabel" style="-fx-font-weight: bold;" styleClass="title-label" />
            </HBox>
            <VBox alignment="TOP_CENTER">
                <Label styleClass="subtle" text="Invite code: " />
                <Label fx:id="inviteCode" style="-fx-font-weight: bold;" styleClass="subtle" />
            </VBox>

            <HBox alignment="CENTER">
                <Button fx:id="showAllExpensesButton" text="%Show_All_Expenses" onAction="#showAllExpensesOverview" />
            </HBox>

        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20" VBox.vgrow="ALWAYS">
            <Label style="-fx-font-size: 20px;" text="" />
            <!-- Participants Section -->
            <Label fx:id="participantsLabel" style="-fx-font-weight: bold;" styleClass="section-label" text="%Participants" />
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="showParticipantsButton" onAction="#showParticipants" styleClass="label-button" text="%Show_Participants" />
                <VBox alignment="CENTER" spacing="5">
                    <HBox alignment="CENTER" spacing="5">
                    </HBox>
                </VBox>
            </HBox>

            <!-- Expenses Section -->

            <Label fx:id="expensesLabel" style="-fx-font-weight: bold;" styleClass="section-label" text="%Expenses" />
            <VBox alignment="CENTER" spacing="10">
                <ComboBox fx:id="participantDropdown" promptText="%Select_participant" />
                <Button fx:id="addExpenseButton" onAction="#addExpense" text="%Add_Expense" />
                <Button fx:id="showExpensesButton" onAction="#showExpensesForSelectedParticipant" text="%Show_Expenses" />
            </VBox>





            <Label fx:id="optionsLabel" style="-fx-font-weight: bold;" styleClass="section-label" text="%Options" />

            <!-- Filter options -->
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="filterOne" onAction="#applyFromFilter" text="%From" />
                <Button fx:id="filterTwo" onAction="#applyIncludingFilter" text="%Including" />
            </HBox>
            <ListView fx:id="optionsListView" />
        </VBox>

    </center>
</BorderPane>
