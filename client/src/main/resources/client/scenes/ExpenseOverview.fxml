<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.scenes.ExpenseOverviewController"
            stylesheets="@/styles.css"
            prefHeight="335.0"
            prefWidth="594.0">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <top>
        <HBox alignment="CENTER_LEFT">
            <Button text="%back" fx:id="backButton" onAction="#switchToEventOverviewScene"/>
            <Button mnemonicParsing="false" onAction="#switchToStatistics" text="#Show_Statistics" />
        </HBox>
    </top>
    <center>
        <ListView fx:id="expensesListView" prefHeight="200" prefWidth="300" VBox.vgrow="ALWAYS" />
    </center>
    <bottom>
        <Label fx:id="sumOfExpensesLabel" style="-fx-font-size: 14px;" />
    </bottom>
</BorderPane>
